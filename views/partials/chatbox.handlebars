<!-- CHAT BAR BLOCK -->

<div class='chat-bar-collapsible'>
	<button id='chat-button' type='button' class='collapsible'>Leave a comment...
		<i id='chat-icon' style='color: #fff;' class='fa fa-fw fa-comments-o'></i>
	</button>

	<div class='content'>
		<div class='full-chat-block'>
			<!-- Message Container -->
			<div class='outer-container'>
				<div class='chat-container'>
					<article class='post'>
						<div class='title'>
							<a href='{{post_url}}' target='_blank'>{{title}}</a>
							<span>({{format_url post_url}})</span>
						</div>
						<div class='meta'>
							{{vote_count}}
							{{format_plural 'point' vote_count}}
							by
							{{user.username}}
							on
							{{format_date created_at}}
							|
							<a href='/post/{{id}}'>{{comments.length}}
								{{format_plural 'comment' comments.length}}</a>

							<!-- Messages -->
							<div class='comments'>
								{{#each this}}
									<section class='comment'>
										<div class='meta'>
											{{user.username}}
											on
											{{format_date created_at}}
										</div>
										<div class='text'>
											{{comment_text}}
										</div>
									</section>
								{{/each}}
							</div>

						</div>
					</article>

					<!-- User input box -->
					<div class='chat-bar-input-block'>

						<section>
							<h2>Create New Post</h2>

							<form class='new-post-form'>
								<div>
									<label for='post-title'>Title</label>
									<input type='text' id='post-title' name='post-title' />
								</div>
								<div>
									<label for='post-url'>Link</label>
									<input id='post-url' name='post-url' />
								</div>
								<button type='submit' class='btn'>Create</button>
							</form>
						</section>

						<section>
							<h2>Your Posts</h2>
							<ol>

								<li>

									<a href='/dashboard/edit/{{post.id}}' class='edit-link'>Edit
										post</a>
								</li>

							</ol>
						</section>

						<div id='userInput' class='comment-form'>
							<input
								id='textInput'
								class='input-box'
								type='text'
								name='msg comment-body'
								placeholder="Tap 'Enter' to send a message"
							/>
							<p></p>
						</div>

						<div class='chat-bar-icons'>
							{{! <i
								id='chat-icon'
								style='color: crimson;'
								class='fa fa-fw fa-heart'
								onclick='heartButton()'
							></i> }}
							<i
								id='chat-icon'
								style='color: #333;'
								class='fa fa-fw fa-send'
								type='submit'
								onclick='sendButton()'
							></i>
						</div>
					</div>

					<div id='chat-bar-bottom'>
						<p></p>
					</div>

				</div>
			</div>

		</div>
	</div>

</div>

<script src='/javascript/add-post.js'></script>
<script src='./assets/js/chatbox.js'></script>
<script src='/javascript/edit-post.js'></script>
<script src='/javascript/delete-post.js'></script>
<script src='/javascript/comment.js'></script>