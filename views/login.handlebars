		<!-- LOGIN FORM -->
		<section class='forms-section'>
			<div class='forms'>
				<div class='form-wrapper is-active'>
					<button type='button' class='switcher switcher-login'>
						Login
						<span class='underline'></span>
					</button>
					<form class='form form-login login-form'>
						<fieldset>
							<legend>Please, enter your email and password for login.</legend>
							<div class='input-block'>
								<label for='login-email email-login'>E-mail</label>
								<input
									id='login-email email-login'
									type='email text'
									required
								/>
							</div>
							<div class='input-block'>
								<label for='login-password password-login'>Password</label>
								<input
									id='login-password password-login'
									type='password'
									required
								/>
							</div>
						</fieldset>
						<button type='submit' class='btn-login'>Login</button>
					</form>
				</div>
				<div class='form-wrapper'>
					<button type='button' class='switcher switcher-signup'>
						Sign Up
						<span class='underline'></span>
					</button>
					<form class='form form-signup signup-form'>
						<fieldset>
							<legend>Please, enter your email, username, and password for sign
								up.</legend>
							<div class='input-block'>
								<label for='signup-email  email-signup'>E-mail</label>
								<input id='signup-email' type='email email-signup' required />
							</div>
							<div>
								<label for='username-signup'>Username:</label>
								<input type='text' id='username-signup' />
							</div>
							<div class='input-block'>
								<label for='signup-password password-signup'>Password</label>
								<input
									id='signup-password password-signup'
									type='password'
									required
								/>
							</div>
							{{! <div class='input-block'>
								<label for='signup-password-confirm'>Confirm password</label>
								<input id='signup-password-confirm' type='password' required />
							</div> }}
						</fieldset>
						<button type='submit' class='btn-signup'>Continue</button>
					</form>
				</div>
			</div>
		</section>

		<script src='./assets/js/script.js'></script>
		<script src='./assets/js/login.js'></script>
		<script src='../public/module-javascript/login.js'></script>

	</body>

</html>