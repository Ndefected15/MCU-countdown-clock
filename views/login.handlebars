<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" , initial-scale="1">
    <title>Disney Clone</title>
    <link rel="stylesheet" href="/css/upcoming.css">
    <link rel="stylesheet" href="/css/login.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&family=Sen:wght@400;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <nav class="navbar">
        <img src="/images/Logo/Marvel_Cinematic_Universe_Logo-.png" class="brand-logo" alt="">
    </nav>

    <div class="sidebar" onmouseover="openNav()" onmouseout="closeNav()">

        <a href="#" class="side-text"><i class="left-menu-icon fas fa-search"></i>Search</a>
        <a href="#" class="side-text"><i class="left-menu-icon fas fa-home"></i>Home</a>
        <a href="#" class="side-text"><i class="left-menu-icon fas fa-users"></i>Account</a>
        <a href="#" class="side-text"><i class="left-menu-icon fas fa-bookmark"></i>Bookmark</a>
        <a href="#" class="side-text"><i class="left-menu-icon fas fa-tv"></i>TV Shows</a>
        <a href="#" class="side-text"><i class="left-menu-icon fas fa-film"></i>Films</a>
        <a href="#" class="side-text"><i class="left-menu-icon fas fa-hourglass-start"></i>Upcoming</a>
    </div>

    <!-- LOGIN FORM -->
    <section class="forms-section">
        <div class="forms">
            <div class="form-wrapper is-active">
                <button type="button" class="switcher switcher-login">
              Login
              <span class="underline"></span>
            </button>
                <form class="form form-login">
                    <fieldset>
                        <legend>Please, enter your email and password for login.</legend>
                        <div class="input-block">
                            <label for="login-email">E-mail</label>
                            <input id="login-email" type="email" required>
                        </div>
                        <div class="input-block">
                            <label for="login-password">Password</label>
                            <input id="login-password" type="password" required>
                        </div>
                    </fieldset>
                    <button type="submit" class="btn-login">Login</button>
                </form>
            </div>
            <div class="form-wrapper">
                <button type="button" class="switcher switcher-signup">
              Sign Up
              <span class="underline"></span>
            </button>
                <form class="form form-signup">
                    <fieldset>
                        <legend>Please, enter your email, password and password confirmation for sign up.</legend>
                        <div class="input-block">
                            <label for="signup-email">E-mail</label>
                            <input id="signup-email" type="email" required>
                        </div>
                        <div class="input-block">
                            <label for="signup-password">Password</label>
                            <input id="signup-password" type="password" required>
                        </div>
                        <div class="input-block">
                            <label for="signup-password-confirm">Confirm password</label>
                            <input id="signup-password-confirm" type="password" required>
                        </div>
                    </fieldset>
                    <button type="submit" class="btn-signup">Continue</button>
                </form>
            </div>
        </div>
    </section>

    <script src="/js/login.js"></script>

</body>

</html>